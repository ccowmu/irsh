#!/usr/bin/fish

set self (basename (status -f))

set paths
for path in $argv
    if test $path = -
        set paths $paths -
    else
        # This is the default command when init doesn't find something in bin/,
        # so we want to just quietly ignore missing files.
        set true_path (lib/path $path)
        if test -e $true_path
            set paths $paths $true_path
        end
    end
end

cat -- $paths | shuf -n1
